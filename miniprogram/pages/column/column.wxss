/* column.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 排序选项样式 */
.sort-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.sort-options {
  display: flex;
  gap: 30rpx;
}

.sort-item {
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.sort-item.active {
  background-color: #007aff;
}

.sort-text {
  font-size: 26rpx;
  color: #666;
}

.sort-item.active .sort-text {
  color: #fff;
}

/* 专栏列表样式 */
.columns-section {
  padding: 0 20rpx;
}

.column-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.column-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.column-cover {
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.column-content {
  display: flex;
  flex-direction: column;
}

.column-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.column-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.column-badges {
  margin-left: 15rpx;
}

.hot-badge {
  font-size: 20rpx;
  color: #ff6b6b;
  background-color: #ffe0e0;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.column-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.column-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  align-items: center;
}

.author-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.author-name {
  font-size: 24rpx;
  color: #333;
}

.column-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #999;
}

.column-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 20rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.column-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.subscribe-btn {
  width: 120rpx;
  height: 60rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.subscribe-btn.subscribed {
  background-color: #f0f0f0;
  color: #666;
}

.subscribe-count {
  font-size: 22rpx;
  color: #999;
}

/* 加载状态样式 */
.loading-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}
