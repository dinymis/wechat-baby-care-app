/* column-detail.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 专栏头部样式 */
.column-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.column-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.column-info {
  display: flex;
  flex-direction: column;
}

.column-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.column-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.column-meta {
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.author-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.column-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  font-size: 22rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.subscribe-btn {
  flex: 1;
  height: 80rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.subscribe-btn.subscribed {
  background-color: #f0f0f0;
  color: #666;
}

.share-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #f8f9fa;
  color: #333;
  border: 1rpx solid #e9ecef;
  border-radius: 40rpx;
  font-size: 26rpx;
}

/* 文章列表样式 */
.articles-section {
  background-color: #fff;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-btn {
  font-size: 26rpx;
  color: #666;
}

.articles-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.article-item {
  display: flex;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.article-item:active {
  transform: scale(0.98);
  background-color: #e9ecef;
}

.article-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.article-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.article-summary {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.article-time {
  font-size: 22rpx;
  color: #999;
}

.article-read-time {
  font-size: 22rpx;
  color: #999;
}

.article-read-count {
  font-size: 22rpx;
  color: #999;
}

.article-free {
  font-size: 20rpx;
  color: #52c41a;
  background-color: #f6ffed;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}
