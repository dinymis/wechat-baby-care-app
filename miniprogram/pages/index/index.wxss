/* index.wxss */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 0 30rpx 30rpx;
}

/* 搜索栏样式 */
.search-bar {
  background-color: #fff;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.search-input {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 轮播图样式 */
.banner-swiper {
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.banner-item {
  position: relative;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.6));
  padding: 40rpx 30rpx 30rpx;
}

.banner-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 分类导航样式 */
.category-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 25rpx 30rpx 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: visible;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
  z-index: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 1rpx 3rpx rgba(0,0,0,0.3);
}

.more-btn {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  font-weight: 500;
}

/* 横向分类标签样式 */
.category-tabs {
  width: 100%;
  height: 90rpx;
  white-space: nowrap;
  position: relative;
  z-index: 1;
}

.category-tab-list {
  display: flex;
  gap: 12rpx;
  padding: 10rpx 0;
  padding-left: 0;
  padding-right: 20rpx;
  height: 70rpx;
  align-items: center;
  width: max-content;
  min-width: 100%;
}

.category-tab-item {
  flex-shrink: 0;
  padding: 16rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 18rpx;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
  min-width: 140rpx;
  max-width: 160rpx;
  box-shadow: 0 3rpx 10rpx rgba(0,0,0,0.15);
  backdrop-filter: blur(10rpx);
}

.category-tab-item:active {
  transform: scale(0.95);
  background-color: #e9ecef;
}

.category-tab-item.selected {
  background-color: #007aff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.4);
  transform: translateY(-2rpx);
}

.category-icon {
  font-size: 26rpx;
  line-height: 1;
  flex-shrink: 0;
}

.category-tab-name {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

.category-tab-item.selected .category-tab-name {
  color: #fff;
}

/* 分类文章展示区域样式 */
.category-articles-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.articles-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-item {
  display: flex;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.article-item:active {
  transform: scale(0.98);
  background-color: #e9ecef;
}

.article-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.article-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.article-summary {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.article-author {
  font-size: 22rpx;
  color: #999;
}

.article-time {
  font-size: 22rpx;
  color: #999;
}

.article-read-time {
  font-size: 22rpx;
  color: #999;
}

.article-read-count {
  font-size: 22rpx;
  color: #999;
}

.article-free {
  font-size: 20rpx;
  color: #52c41a;
  background-color: #f6ffed;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

