/* search.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 搜索框样式 */
.search-section {
  margin-bottom: 30rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #666;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
  margin-left: 15rpx;
}

/* 搜索结果样式 */
.results-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 标签页样式 */
.tabs {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #007aff;
  font-weight: 500;
}

/* 搜索结果列表样式 */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.result-item {
  display: flex;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.result-item:active {
  transform: scale(0.98);
  background-color: #e9ecef;
}

.result-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.result-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.result-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.result-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.result-meta {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.result-author {
  font-size: 22rpx;
  color: #999;
}

.result-time {
  font-size: 22rpx;
  color: #999;
}

.result-stats {
  font-size: 22rpx;
  color: #999;
}

.result-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

/* 加载状态样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 无结果样式 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.no-results-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.no-results-text {
  font-size: 28rpx;
  color: #999;
}

/* 搜索建议样式 */
.suggestions-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 热门分类样式 */
.category-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 25rpx 30rpx 20rpx;
  position: relative;
  overflow: visible;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
  z-index: 1;
}

.category-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 1rpx 3rpx rgba(0,0,0,0.3);
  margin-bottom: 20rpx;
  display: block;
}

/* 横向分类标签样式 */
.category-tabs {
  width: 100%;
  height: 90rpx;
  white-space: nowrap;
  position: relative;
  z-index: 1;
}

.category-tab-list {
  display: flex;
  gap: 12rpx;
  padding: 10rpx 0;
  padding-left: 0;
  padding-right: 20rpx;
  height: 70rpx;
  align-items: center;
  width: max-content;
  min-width: 100%;
}

.category-tab-item {
  flex-shrink: 0;
  padding: 16rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 18rpx;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
  min-width: 140rpx;
  max-width: 160rpx;
  box-shadow: 0 3rpx 10rpx rgba(0,0,0,0.15);
  backdrop-filter: blur(10rpx);
}

.category-tab-item:active {
  transform: scale(0.95);
  background-color: #e9ecef;
}

.category-icon {
  font-size: 26rpx;
  line-height: 1;
  flex-shrink: 0;
}

.category-tab-name {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

/* 搜索历史样式 */
.history-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  font-size: 26rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.history-item {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  gap: 10rpx;
}

.history-keyword {
  font-size: 24rpx;
  color: #666;
}

.delete-btn {
  font-size: 28rpx;
  color: #999;
  width: 30rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 热门搜索样式 */
.hot-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.hot-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.hot-keyword-item {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.hot-keyword-item:active {
  background-color: #e9ecef;
  transform: scale(0.95);
}

.keyword-text {
  font-size: 24rpx;
  color: #333;
}

.keyword-count {
  font-size: 20rpx;
  color: #999;
}
