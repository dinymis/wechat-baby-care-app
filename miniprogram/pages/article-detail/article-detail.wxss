/* article-detail.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

.container {
  background-color: #fff;
  min-height: 100vh;
}

/* 文章头部样式 */
.article-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 30rpx;
  display: block;
}

.article-meta {
  margin-bottom: 25rpx;
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
}

.follow-btn {
  width: 120rpx;
  height: 60rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 60rpx;
}

.article-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag {
  font-size: 22rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
}

/* 文章封面样式 */
.article-cover-section {
  padding: 0 30rpx 30rpx;
}

.article-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}

/* 文章内容样式 */
.article-content {
  padding: 0 30rpx 40rpx;
  line-height: 1.8;
}

.article-content rich-text {
  font-size: 28rpx;
  color: #333;
}

/* 相关推荐样式 */
.related-section {
  padding: 30rpx;
  background-color: #f8f9fa;
  border-top: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: block;
}

.related-articles {
  display: flex;
  gap: 20rpx;
}

.related-item {
  flex: 1;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.related-item:active {
  transform: scale(0.98);
}

.related-cover {
  width: 100%;
  height: 120rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.related-title {
  font-size: 24rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

/* 底部操作栏样式 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 22rpx;
  color: #666;
}
